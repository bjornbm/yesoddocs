$(function(){
    var area = null;
    var update = function(){
        var isHtml = $("#format option:selected").text() == "HTML";
        if (isHtml == !!area) {
        } else if (area) {
            area.removeInstance("content");
            area = null;
        } else {
            area = new nicEditor({fullPanel: true}).panelInstance("content", {hasPanel: true});
        }
    };
    update();
    $("#format").change(update);
});
